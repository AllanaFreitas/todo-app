<main>
    <section class="tarefas">
        {{#etah tarefas}}
        <div class="tarefa">
            <form action="">
                {{#if this.completa}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" checked>
                    <label for="tarefa-1">Completar curso de Javascripit</label>
                </div>
                {{else}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" onchange="completarTarefa(){{this.id}}">
                    <label for="tarefa-1">Completar curso de Javascripit</label>
                </div>
                {{/if}}
                <button>
                    <img src="/imagens/x-icon.png" alt="icone de x para excluir tarefas">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="informacoes">
            <p>5 tarefas ativas</p>

            <div class="botoes"> 
                <a href="" class="active">Todas</a>
                <a href="">ativas</a>
                <a href="">Completas</a>
            </div>

            <a href="">Limpar tarefas</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">Todas</a>
        <a href="">ativas</a>
        <a href="">Completas</a>

    </section>
</main>